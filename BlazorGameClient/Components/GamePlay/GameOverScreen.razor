@code {
    [Parameter]
    public bool IsVisible { get; set; }

    [Parameter]
    public EventCallback OnReplay { get; set; }

    [Parameter]
    public EventCallback OnSave { get; set; }


    [Parameter]
    public string Label { get; set; }="GameOver";
}

@if (IsVisible)
{
    <div style="
        position: fixed;
        top: 0; left: 0;
        width: 100vw; height: 100vh;
        background-color: rgba(0,0,0,0.85);
        color: white;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        z-index: 9999;">

        <h1 style="font-size: 60px; margin-bottom: 40px;">
            @Label
        </h1>

        <div style="display: flex; gap: 20px;">

            <button style="
                font-size: 24px;
                padding: 15px 30px;
                transition: transform 0.15s ease-in-out;" @onclick="OnReplay"
                onmouseover="this.style.transform='scale(1.12)'" onmouseout="this.style.transform='scale(1)'">
                Rejouer
            </button>

            <button style="
                font-size: 24px;
                padding: 15px 30px;
                transition: transform 0.15s ease-in-out;" @onclick="OnSave"
                onmouseover="this.style.transform='scale(1.12)'" onmouseout="this.style.transform='scale(1)'">
                Sauvegarder
            </button>

        </div>
    </div>
}