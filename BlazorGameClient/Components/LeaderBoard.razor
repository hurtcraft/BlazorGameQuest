        new Player { Id = 5, Name = "Foxtrot", Score = 1250 },
        new Player { Id = 6, Name = "Golf", Score = 870 },
        new Player { Id = 7, Name = "Hotel", Score = 1180 },
        new Player { Id = 8, Name = "India", Score = 1020 },
        new Player { Id = 9, Name = "Juliet", Score = 1360 },
        new Player { Id = 10, Name = "Kilo", Score = 940 },
        new Player { Id = 11, Name = "Lima", Score = 1280 },
        new Player { Id = 12, Name = "Mike", Score = 1110 },
        new Player { Id = 13, Name = "November", Score = 1220 },
    };

    protected override void OnInitialized()
    {
        Joueurs = Joueurs.OrderByDescending(x => x.Score).ToList();
    }
}
